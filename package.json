{
  "name": "graasp-mailer",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn build & yarn hooks:install",
    "prepack": "yarn build",
    "build": "tsc & yarn copy-assets",
    "test": "jest --forceExit --coverage --verbose",
    "test:watch": "yarn test --watchAll",
    "pre-commit": "yarn prettier:check && yarn lint",
    "hooks:uninstall": "husky uninstall",
    "hooks:install": "husky install",
    "post-commit": "git status",
    "prettier:check": "prettier --check \"{src,test}/**/*.{js,ts}\"",
    "prettier:write": "prettier --write \"{src,test}/**/*.{js,ts}\"",
    "lint": "tsc --noEmit && eslint \"{src,test}/**/*.{js,ts}\"  --fix",
    "copy-assets": "cpy ./src/lang ./dist/lang && cpy ./src/templates ./dist/templates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graasp/graasp-mailer.git"
  },
  "keywords": [],
  "author": "Graasp Association",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/graasp/graasp-mailer/issues"
  },
  "homepage": "https://github.com/graasp/graasp-mailer#readme",
  "dependencies": {
    "cpy-cli": "3.1.1",
    "eta": "^1.12.3",
    "fastify-nodemailer": "^5.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-polyglot": "1.0.0",
    "i18n": "0.13.4",
    "point-of-view": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "@types/eslint": "^8.2.2",
    "@types/graasp": "github:graasp/graasp-types.git#master",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.8",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fastify": "^3.25.3",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "^4.0.3",
    "uuid": "8.3.2"
  },
  "packageManager": "yarn@3.2.0-rc.3"
}
